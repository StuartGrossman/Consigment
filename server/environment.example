# Environment Configuration for Summit Gear Exchange Server

# Stripe Configuration (Replace with your actual keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# CORS Configuration (Add your production domains)
ALLOWED_ORIGINS=http://localhost:5173,https://your-production-domain.com

# Firebase Admin SDK (Path to your service account key file)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/firebase-admin-key.json

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Database Configuration (if using additional databases)
DATABASE_URL=your_database_url_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/server.log

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Payment Configuration
PAYMENT_CURRENCY=usd
SELLER_COMMISSION_RATE=0.75
STORE_COMMISSION_RATE=0.25
SHIPPING_COST=5.99

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# Webhook Configuration
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here 